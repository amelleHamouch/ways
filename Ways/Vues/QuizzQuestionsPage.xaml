<Page x:Class="Ways.Vues.QuizzQuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1800"
      Title="QuizzQuestionsPage" >

    <Grid  >

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>



        <DockPanel  Grid.Row="0" Background="AliceBlue" Width="auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Stretch" >
                <Label Content="NomFormulaire"></Label>
                <TextBox x:Name="NomFormulaire" Width="252" Height="38" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label Content="typeFormulaire"></Label>
                <TextBox x:Name="typeFormulaire" Width="226" Height="38"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label Content="Coefficient"></Label>
                <TextBox x:Name="Coefficient" Height="38"/>
            </StackPanel>
            <StackPanel>
                <Label ></Label>

                <Button Content="Retour"  Height="38" Width="86" Click="ReturnBtn" />
            </StackPanel>
        </DockPanel>
        <ListView  x:Name="questionList"  Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" Margin="10,55,0,0" Grid.RowSpan="6" Width="auto" Height="311"  >
            <ListView.View>
                <GridView >

                    <GridViewColumn Header="Enoncé" Width="Auto " DisplayMemberBinding="{Binding Sentence}"/>
                    <GridViewColumn  Header="Mauvaise réponse" Width="Auto" DisplayMemberBinding="{Binding WrongAnswer }"/>
                    <GridViewColumn Header="Bonne réponse" Width="Auto"    DisplayMemberBinding="{Binding ValidAnswer}" />
                    <GridViewColumn Header="Points"  DisplayMemberBinding="{Binding Points}"/>
                    <GridViewColumn Header="Modifier la question"  >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Tag="{Binding Id}" Content="Modifier"  Margin="20" VerticalAlignment="Center" Click="displayModification"  />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>

            </ListView.View>
        </ListView>

        <TextBlock x:Name="infoTextBlock" HorizontalAlignment="Center" Grid.Row="5" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="780" Height="52"/>

    </Grid>
</Page>
