<Page x:Class="Ways.Vues.UserLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserLoginPage"  FontSize="22" Height="500" Width="500">

    <Grid>
        <Border Background="#c9e9f6" CornerRadius="20" Margin="10,0,0,0" RenderTransformOrigin="0.491,0.804" BorderThickness="22,22,22,22" Opacity="0.795" >
            <StackPanel Margin="20">
                <Label Content="Choix du Pseudo " Foreground="#ff7f50" FontSize="48" HorizontalAlignment="Center" Height="62" Width="354" FontFamily="Franklin Gothic Medium"></Label>
                <Separator></Separator>

                <TextBox Name="userLogintxt" Background="#005C75" Foreground="White" FontSize="20" Width="352" Margin="0,50,0,0" ></TextBox>

                <Button x:Name="submit" Content="Valider " Foreground="white" FontSize="22" Background="#ff7f50" Height="51" Width="132" Click="SubmitUser" Margin="20,20,20,20"  />

            </StackPanel>
        </Border>

    </Grid>
</Page>
