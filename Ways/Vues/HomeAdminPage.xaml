<Page x:Class="Ways.Vues.HomeAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="HomeAdminPage"   Height="600" Width="Auto" Background="Transparent">



    <Grid HorizontalAlignment="Stretch" Margin="0,70,0,0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="702*"/>
        </Grid.ColumnDefinitions>
        <TabControl TabStripPlacement="Left" Margin="-10,10,21,24" Grid.ColumnSpan="3" Background="Transparent" >
            <TabItem Header="Emailing" Height="50" Width="80" FontSize="15" Background="#FFFF8A43">


                <Frame x:Name="emailingView" NavigationUIVisibility="Hidden"  Height="auto" ></Frame>

            </TabItem>


            <TabItem Header="Quizz" Height="50" Width="80" FontSize="15"  Background="#FFFF8A43" >
                <Frame x:Name="quizzView" NavigationUIVisibility="Hidden" Height="auto"></Frame>

            </TabItem>

            <TabItem Header="Scores" Height="50" Width="80" FontSize="15" Background="#FFFF8A43">
                <Frame x:Name="score" NavigationUIVisibility="Hidden" Height="auto" ></Frame>
            </TabItem>
            <TabItem Header="Test" Height="50" Width="80" FontSize="15" Background="#FFFF8A43">
                <Frame x:Name="Test" NavigationUIVisibility="Hidden" Height="auto" ></Frame>
            </TabItem>

        </TabControl>
    </Grid>
</Page>
