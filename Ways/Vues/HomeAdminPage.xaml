<Page x:Class="Ways.Vues.HomeAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeAdminPage" Background="Azure"  Height="Auto" Width="Auto">

    <Grid Margin="0,10,27,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl TabStripPlacement="Left" Margin="0,10,21,24" Grid.ColumnSpan="2" >
            <TabItem Header="Emailing" Height="40" Width="80" FontSize="15">

                <Frame x:Name="emailingView" NavigationUIVisibility="Hidden" ></Frame>

            </TabItem>
            

            <TabItem Header="Quizz" Height="40" Width="80" FontSize="15" >
                <Frame x:Name="quizzView" NavigationUIVisibility="Hidden" ></Frame>

            </TabItem>

            <TabItem Header="Scores" Height="40" Width="80" FontSize="15" >
                <Frame x:Name="score" NavigationUIVisibility="Hidden" ></Frame>
            </TabItem>

        </TabControl>
    </Grid>
</Page>
