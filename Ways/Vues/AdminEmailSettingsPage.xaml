<Page x:Class="Ways.Vues.AdminEmailSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"

      Title="AdminLoginPage"  FontSize="22" Margin="50,50,50,50">


    <Grid Width="auto" Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Margin="20,20,20,-35" Grid.Column="1" Grid.RowSpan="12">
            <Label Content="Réglages du compte email" Foreground="#ff7f50" FontSize="30" HorizontalAlignment="Center" Height="62" Grid.Row="0" ></Label>
            <Label Grid.Row="1" Content="Veuillez entrer les  coordonnées d'emailing ,veuillez utiliser un compte Cesi Outlook" Foreground="#005C75" FontSize="16" HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="0,30,0,0" ></Label>
            <Separator></Separator>
            <Label  Grid.Row="2" Content="Email" Foreground="#005C75"></Label>
            <TextBox  Grid.Row="3" Name="adminLogin" Background="#005C75" Foreground="White" FontSize="20"></TextBox>
            <Label  Grid.Row="4" Content="Mot de passe" Foreground="#005C75"></Label>
            <PasswordBox Grid.Row="5" x:Name="adminPassBox" Background="#005C75" Foreground="White" FontSize="20"/>
            <Label Grid.Row="6" Content="Sujet" Foreground="#005C75"></Label>
            <TextBox  Grid.Row="7" Name="sujetBox" Background="#005C75" Foreground="White" FontSize="20"></TextBox>
            <Label Grid.Row="6" Content="Corps" Foreground="#005C75"></Label>
            <TextBox  Grid.Row="7" Name="corpsBox" Background="#005C75" Foreground="White" FontSize="20"></TextBox>
            <Button x:Name="submit" Content="Valider " Foreground="white" FontSize="22" Background="#ff7f50" Height="48" Width="132" Click="saveEmailSettings" RenderTransformOrigin="0.51,0.75" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Page>
