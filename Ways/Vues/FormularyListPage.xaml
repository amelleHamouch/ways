<Page x:Class="Ways.Vues.FormularyListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="FormularyListPage"  Background="Transparent">

    <Grid Width="auto" Height="auto" Margin="-10,-19,-10,-20" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,27,0,0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column ="2" Width="292">
            <TextBox x:Name="formularyNameInput" Width="86" />
            <Button x:Name="FormularyCreate" Content="Nouveau Formulaire" Click="createFormulary" Width="112"/>
        </StackPanel>

        <ListView  x:Name="formularyList" Grid.RowSpan="9" Grid.ColumnSpan="4" VerticalAlignment="Top" HorizontalAlignment="Left" Width="776" Height="534"  SelectionChanged="formularyList_SelectionChanged"  Background="Transparent" Margin="20,65,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id du Questionnaire" Width="220" DisplayMemberBinding="{Binding IdFormulary}" />
                    <GridViewColumn Header="Nom du Questionnaire" Width="220" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Coefficient" Width="120" DisplayMemberBinding="{Binding Coef}"/>

                    <GridViewColumn Header="Voir">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Tag="{Binding IdFormulary}" Content="détails" Margin="0" VerticalAlignment="Center" Click="modifyForm" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>



    </Grid>
</Page>
