<Page x:Class="Ways.Vues.FormularyListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="FormularyListPage">

    <Grid Width="auto" Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="formularyNameInput" Width="180" />
            <Button x:Name="FormularyCreate" Content="Nouveau Formulaire" HorizontalAlignment="Right" VerticalAlignment="Top" Click="createFormulary" Margin="20,0,0,0"/>
        </StackPanel>

        <ListView  x:Name="formularyList" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="656" Height="432" Grid.RowSpan="6" SelectionChanged="formularyList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id du Questionnaire" Width="220" DisplayMemberBinding="{Binding IdFormulary}"/>
                    <GridViewColumn Header="Nom du Questionnaire" Width="220" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Coefficient" Width="120" DisplayMemberBinding="{Binding Coef}"/>

                    <GridViewColumn Header="Voir">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Tag="{Binding IdFormulary}" Content="détails" Margin="0" VerticalAlignment="Center" Click="modifyForm" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
       


    </Grid>
</Page>
