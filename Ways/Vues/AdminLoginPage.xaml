<Page x:Class="Ways.Vues.AdminLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ways.Vues"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLoginPage"  FontSize="22" Height="319" Width="300">

    <Grid>
        <Border Background="#c9e9f6" CornerRadius="20" Margin="10,0,0,0">
            <StackPanel Margin="20">
                <Label Content="Login" Foreground="#ff7f50" FontSize="30" HorizontalAlignment="Center" Height="62" Width="104"></Label>
                <Separator></Separator>
                <Label Content="Identifiant" Foreground="#005C75"></Label>
                <TextBox Name="adminLogin" Background="#005C75" Foreground="White" FontSize="20"></TextBox>
                <Label Content="Mot de passe" Foreground="#005C75"></Label>
                <PasswordBox x:Name="adminPassBox" Background="#005C75" Foreground="White" FontSize="20"/>
                <Button x:Name="submit" Content="Valider " Foreground="white" FontSize="22" Background="#ff7f50" Height="51" Width="132" Click="SubmitAdmin" />
                <TextBlock x:Name="infoTextBlock" HorizontalAlignment="Center" Grid.Row="6" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="780" Height="52"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
